    public void doMudaNacao(Nacao nacao) {
        try {
            getMapaControler().printTag(nacao.getCapital().getLocal());
        } catch (NullPointerException ex) {
            this.doTagHide();
        }
        this.setProdutosModel(financasControl.getMercadoTableModel(nacao));
        this.setExtratoModel(financasControl.getExtratoTableModel(nacao));
        this.setProjecaoModel(financasControl.getProjecaoTableModel(nacao, new ArrayList<PersonagemOrdem>()));
    }
