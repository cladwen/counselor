        jtExtrato.setAutoResizeMode(javax.swing.JTable.AUTO_RESIZE_OFF);
        jtProj.setAutoCreateColumnsFromModel(true);
        jtProj.setAutoCreateRowSorter(true);
        jtProj.setSelectionMode(ListSelectionModel.SINGLE_SELECTION);
